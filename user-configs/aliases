# ala - Alias Add - Add new aliases to this file
ala(){ 
  chez_file=$(chezmoi source-path ~/user-configs/aliases);
  echo "alias $1='$2'" | tee -a "$chez_file";
  chezmoi git commit -- -a -m "adding alias $1";
  chezmoi apply; 
}

alias aliasadd='ala'
### AUTOMATICALLY GENERATED BY aliasadd() ###

alias ssh='zssh'
alias chez='chezmoi'
alias air='~/go/bin/air'

alias edb='edgedb'
