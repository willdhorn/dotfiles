# This is Git's per-user configuration file.
[user]
	name = will
	email = 88556285+willdhorn@users.noreply.github.com
[alias]
	aa = add -A
	c = commit
	ca = commit --amend
	can = commit --amend --no-edit
	ac = "!git add -A && git commit"
	aca = "!git add -A && git commit --amend"
	acan = "!git add -A && git commit --amend --no-edit"
	co = checkout
	cp = cherry-pick
	br = branch
	undo = reset --soft HEAD~
	unstage = reset --soft HEAD^
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	la = "!git config -l | grep alias | cut -c 7-"
	ours = "!f() { git co --ours $@ && git add $@; }; f"
	theirs = "!f() { git co --theirs $@ && git add $@; }; f"
	# rename [branch] to done-[branch]
	done = "!f() { git branch | grep "$1" | cut -c 3- | grep -v done | xargs -I{} git branch -m {} done-{}; }; f"
	# ala = "!f() { x="$1"; shift; git config --global --replace-all alias.$x \"$*\"; }; f"
	f = ls-files --deduplicate
	pf = push -f
[push]
	# automatically sets upstream for new branches
	default = simple
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[init]
	defaultBranch = main
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED
[diff]
	tool = vscode
	algorithm = histogram
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[core]
	excludesFile = ~/dotfiles/git/gitignore